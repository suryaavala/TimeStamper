<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <HorizontalScrollView
        android:id="@+id/timestamp_horizontall_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/left_container"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/recycler_timestamp_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:minEms="3"
                        android:text="12 Aug" />

                    <TextView
                        android:id="@+id/recycler_timestamp_weekday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/recycler_timestamp_day"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="Mon" />

                    <TextView
                        android:id="@+id/recycler_timestamp_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/recycler_timestamp_day"
                        android:layout_marginLeft="20dp"
                        android:layout_toEndOf="@+id/recycler_timestamp_day"
                        android:text="10:41:59" />

                    <TextView
                        android:id="@+id/recycler_timestamp_note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/recycler_timestamp_time"
                        android:layout_below="@+id/recycler_timestamp_time"
                        android:text="my parking expires" />

                    <TextView
                        android:id="@+id/recycler_timestamp_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/recycler_timestamp_note"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="false"
                        android:layout_alignTop="@+id/recycler_timestamp_day"
                        android:layout_centerVertical="false"
                        android:layout_marginRight="30dp"
                        android:gravity="center"
                        android:text="Sport" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/right_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/timestamp_map"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/timestamp_map_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/ic_dialog_map" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/timestamp_edit"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageButton
                        android:id="@+id/timestamp_edit_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/ic_menu_edit" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/timestamp_remove"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/timestamp_remove_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/ic_menu_delete" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/timestamp_map"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/timestamp_map_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/pin" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>