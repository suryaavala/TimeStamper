<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recycler_view_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/left_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/recycler_item_border"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/recycler_timestamp_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:minEms="3"
                android:text="12 Aug"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recycler_timestamp_weekday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recycler_timestamp_day"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:text="Mon"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/recycler_timestamp_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/recycler_timestamp_day"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/recycler_timestamp_day"
                android:text="10:41:59"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/recycler_timestamp_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/recycler_timestamp_time"
                android:layout_alignWithParentIfMissing="false"
                android:layout_below="@+id/recycler_timestamp_time"
                android:layout_marginBottom="5dp"
                android:layout_toLeftOf="@+id/recycler_timestamp_category"
                android:ellipsize="end"
                android:minLines="1"
                android:text="sample" />

            <ImageView
                android:id="@+id/recycler_timestamp_category"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignEnd="@+id/recycler_timestamp_button_menu"
                android:layout_alignParentEnd="false"
                android:layout_alignParentTop="false"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:src="@drawable/category_weather" />

            <TextView
                android:id="@+id/recycler_timestamp_button_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="false"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="10dp"
                android:text="&#8942;"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/in_between"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/left_container"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingStart="10dp"
        android:text="10:14:05"
        android:textAlignment="viewEnd"
        android:textColor="#80FFFFFF"
        android:textSize="10sp"
        android:visibility="visible" />

</RelativeLayout>